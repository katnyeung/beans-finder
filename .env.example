# PostgreSQL (Neon) Configuration
# Format: jdbc:postgresql://host:port/database
DATABASE_URL=jdbc:postgresql://your-neon-host.neon.tech:5432/coffee_db?sslmode=require
SPRING_DATASOURCE_USERNAME=your_username
SPRING_DATASOURCE_PASSWORD=your_password

# Alternative: For local PostgreSQL (with Docker Compose)
# DATABASE_URL=jdbc:postgresql://localhost:5432/coffee_db
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=postgres

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Crawler Configuration
CRAWLER_DELAY_SECONDS=2
CRAWLER_RETRY_ATTEMPTS=3
CRAWLER_UPDATE_INTERVAL_DAYS=14
CRAWLER_ENABLED=true

# Server Configuration
SERVER_PORT=8080
